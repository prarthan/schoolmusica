   <build>
        <defaultGoal>install</defaultGoal>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.0.2</version>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            
	        <plugin>
	          <groupId>org.apache.tomcat.maven</groupId>
	          <artifactId>tomcat6-maven-plugin</artifactId>
            <configuration>
              <warSourceDirectory>${project.build.directory}</warSourceDirectory> 
            </configuration>
	        </plugin>

      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>yuicompressor-maven-plugin</artifactId>
        <version>1.1</version>
        <executions>
          <execution>
            <goals>
              <goal>compress</goal>
            </goals>
          </execution>
        </executions>        
        <configuration>
            <gzip>true</gzip>
            <nosuffix>true</nosuffix>
            <includes>
              <include>**/*.jsp</include>
              <include>**/*.js</include>
              <include>**/*.css</include>
            </includes>
          <aggregations>
            <aggregation>
              <insertNewLine>true</insertNewLine>
              <output>${project.build.directory}/${project.build.finalName}/js/common-all.js</output>
              <includes>
                <include>jquery/*.js</include>
                <include>bootstrap/*.js</include>
                <include>common/*.js</include>
              </includes>
            </aggregation>
            <aggregation>
              <insertNewLine>true</insertNewLine>
              <output>${project.build.directory}/${project.build.finalName}/css/common-all.css</output>
              <includes>
                <include>../css/lib/reset.min.css</include>
                <include>../css/lib/jquery/jquery-ui-1.8.21.custom.css</include>
                <include>../css/lib/jquery/jquery.tagedit.css</include>
                <include>../css/lib/bootstrap/bootstrap.min.css</include>
                <include>../css/lib/bootstrap/bootstrap-responsive.min.css</include>
                <include>../css/common/common.css</include>
                <include>../css/common/gradients.css</include>
                <include>../css/common/header.css</include>
              </includes>
            </aggregation>
          </aggregations>
        </configuration>
      </plugin>

      <plugin>
         <groupId>org.apache.maven.plugins</groupId>
         <artifactId>maven-war-plugin</artifactId>
         <version>2.0.2</version>
         <configuration>
           <webResources>
             <resource>
               <filtering>true</filtering>
               <directory>src/main/webapp</directory>
               <includes>
                 <include>**/*.jsp</include>
                 <!-- include any other file types you want to filter -->
               </includes>
             </resource>
           </webResources>
         </configuration>
      </plugin>

	      </plugins>
        
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>

        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
            </testResource>
            <testResource>
                <directory>src/main/webapp</directory>
                <includes>
                    <include>**/*.xml</include>
                </includes>
            </testResource>
        </testResources>
    </build>
    
